<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Filter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/Filter_b_ClearFilters"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/fuchsia"
            android:text="@string/clear" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Filter_header"
        android:layout_above="@id/Filter_b_Minimize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/Filter_rG_Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/Filter_rB_NA_gender"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Filter_rB_NA_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/none"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Inclusive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/inclusive"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Male"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/male"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Female"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/female"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Family"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/family"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/size"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/Filter_rG_Size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/Filter_rB_NA_size"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Filter_rB_NA_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/none"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Single"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/single"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Small"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/small"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/medium"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Large"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/large"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/clean"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Filter_tV_Clean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/none"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/Filter_sB_Clean"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:progress="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/traffic"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/Filter_rG_Traffic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/Filter_rB_NA_traffic"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Filter_rB_NA_traffic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/none"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Low"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/low"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Some"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/some"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_High"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/high"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/access"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/Filter_rG_Access"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/Filter_rB_NA_access"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Filter_rB_NA_access"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/none"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Public"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/publicUse"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Customer_Only"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/customerUse"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/Filter_rB_Private"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/privateUse"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/amenities"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/Filter_cB_Diaper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/diaper" />

                    <CheckBox
                        android:id="@+id/Filter_cB_Condom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/condom" />

                    <CheckBox
                        android:id="@+id/Filter_cB_Tampon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tampon" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Filter_b_Minimize"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/teal"
        android:text="@string/minimize" />

</RelativeLayout>